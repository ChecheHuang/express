{
  "name": "express-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm run build &&  cross-env NODE_ENV=production node -r tsconfig-paths/register ./dist/server.js",
    "dev": "cross-env NODE_ENV=development ts-node-dev -r ./tsconfig-paths-bootstrap.js src/server.ts",
    "build": "esbuild src/**/*.ts  --bundle --packages=external --platform=node --format=cjs --outdir=dist ",
    "format": "prettier --write .",
    "lint": "eslint src --ext ts,tsx --fix --report-unused-disable-directives --max-warnings 0",
    "cm": "git-cz",
    "cma": "git add . && git-cz",
    "db:seed": "ts-node scripts/seed.ts",
    "db:studio": "prisma studio",
    "db:push": "prisma db push && prisma generate",
    "postinstall": "prisma generate",
    "db:reset": "npx prisma migrate reset && npm run db:push  && npm run db:seed",
    "swagger": "ts-node scripts/swagger.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.11.0",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.3",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "swagger-ui-express": "^5.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@types/bcrypt": "^5.0.1",
    "@types/body-parser": "^1.19.5",
    "@types/cookie-parser": "^1.4.5",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.19",
    "@types/http-errors": "^2.0.2",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/module-alias": "^2.0.2",
    "@types/node": "^20.8.6",
    "@types/swagger-ui-express": "^4.1.5",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "chalk": "^4.1.2",
    "cross-env": "^7.0.3",
    "esbuild": "^0.20.1",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.0.3",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prisma": "^5.11.0",
    "swagger-autogen": "^2.23.7",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  }
}
